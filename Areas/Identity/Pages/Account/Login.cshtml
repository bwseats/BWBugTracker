	<!-- Theme Custom CSS -->
	<link rel="stylesheet" href="~/template/css/custom.css">

	<!-- Head Libs -->
	<script src="~/template/vendor/modernizr/modernizr.js"></script>

</head>
<body>
	<!-- start: page -->
	<section class="body-sign">
		<div class="center-sign">
			<a href="/" class="logo float-left">
				<img src="~/img/logo.png" class="mb-3" height="70" alt="Porto Admin" />
			</a>

			<div class="panel card-sign">
				<div class="card-body">
					<form id="account" method="post">
						<h2 class="title text-uppercase font-weight-bold m-0">Sign In</h2>
						<hr />
						<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
						<div class="form-floating mb-3">
							<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
							<label asp-for="Input.Email" class="form-label">Email</label>
							<span asp-validation-for="Input.Email" class="text-danger"></span>
						</div>
						<div class="form-floating mb-3">
							<input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
							<label asp-for="Input.Password" class="form-label">Password</label>
							<span asp-validation-for="Input.Password" class="text-danger"></span>
						</div>
						<div class="checkbox mb-3">
							<label asp-for="Input.RememberMe" class="form-label">
								<input class="form-check-input" asp-for="Input.RememberMe" />
								@Html.DisplayNameFor(m => m.Input.RememberMe)
							</label>
						</div>
						<div>
							<button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
						</div>
						<div class="mt-3 ms-1">
							<p class="text-center">
								<a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
							</p>
							<p class="text-center">
								<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
							</p>
							<p class="text-center">
								<a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
							</p>
						</div>
					</form>
					<p class="text-center">
						<button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
							Log in with a demo account
						</button>
					</p>
					<div class="collapse" id="collapseExample">
						<div class="card card-body">
							<div class="mb-1 text-center">
								<form class="" id="account" method="post">
									<div class="form-group">
										<div class="row">
											<div class="col-12 btn-block">
												<button type="submit" style="width:inherit;height:min-content" class="btn btn-primary p-10 m-2 w-100" name="demoEmail" value="DemoAdminEmail">Demo Admin</button>
												<button type="submit" style="width:inherit;height:min-content" class="btn btn-primary p-10 m-2 w-100" name="demoEmail" value="DemoPMEmail">Demo PM</button>
												<button type="submit" style="width:inherit;height:min-content" class="btn btn-primary p-10 m-2 w-100" name="demoEmail" value="DemoDevEmail">Demo Developer</button>
												<button type="submit" style="width:inherit;height:min-content" class="btn btn-primary p-10 m-2 w-100" name="demoEmail" value="DemoSubEmail">Demo Submitter</button>
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
			<p class="text-center text-muted mt-3 mb-3">&copy; Benjamin Seats 2023</p>
		</div>
	</section>
